<div style="display: flex; justify-content: between; align-items: center; margin-bottom: 2rem;">
    <h1>Campus Map</h1>
    <div>
        <a href="/navigation/route" class="btn btn-primary">
            <i class="fas fa-route"></i> Get Directions
        </a>
        {{#if (eq user.role 'admin')}}
        <a href="/navigation/admin/buildings" class="btn btn-warning">
            <i class="fas fa-cog"></i> Manage Buildings
        </a>
        {{/if}}
    </div>
</div>

<div class="card">
    <div style="text-align: center; padding: 2rem; background: #f8f9fa; border-radius: 8px; margin-bottom: 2rem;">
        <i class="fas fa-map-marked-alt" style="font-size: 4rem; color: #007bff; margin-bottom: 1rem;"></i>
        <h2>Interactive Campus Map</h2>
        <p>Explore our campus buildings and facilities</p>
    </div>

    <!-- Campus Map Visualization -->
    <div style="position: relative; min-height: 500px; background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%); border-radius: 8px; padding: 2rem;">
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 1.5rem;">
            {{#each buildings}}
            <div class="card building-card" style="cursor: pointer; transition: transform 0.2s;" onclick="window.location.href='/navigation/building/{{_id}}'">
                <div style="text-align: center; padding: 1.5rem;">
                    <i class="fas fa-building" style="font-size: 3rem; color: #007bff; margin-bottom: 1rem;"></i>
                    <h3>{{name}}</h3>
                    <p style="color: #666; margin-bottom: 1rem;">{{type}}</p>
                    <div class="badge badge-primary">{{code}}</div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>

    <!-- Building Legend -->
    <div style="margin-top: 2rem;">
        <h3>Building Types Legend</h3>
        <div style="display: flex; flex-wrap: wrap; gap: 1rem; margin-top: 1rem;">
            <div style="display: flex; align-items: center; gap: 0.5rem;">
                <div style="width: 20px; height: 20px; background: #007bff; border-radius: 4px;"></div>
                <span>Academic Buildings</span>
            </div>
            <div style="display: flex; align-items: center; gap: 0.5rem;">
                <div style="width: 20px; height: 20px; background: #28a745; border-radius: 4px;"></div>
                <span>Administrative</span>
            </div>
            <div style="display: flex; align-items: center; gap: 0.5rem;">
                <div style="width: 20px; height: 20px; background: #fd7e14; border-radius: 4px;"></div>
                <span>Recreational</span>
            </div>
            <div style="display: flex; align-items: center; gap: 0.5rem;">
                <div style="width: 20px; height: 20px; background: #6f42c1; border-radius: 4px;"></div>
                <span>Residential</span>
            </div>
        </div>
    </div>
</div>

<!-- Quick Navigation -->
<div class="card" style="margin-top: 2rem;">
    <h3>Quick Navigation</h3>
    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 1rem;">
        <a href="/navigation/route" class="btn btn-primary">
            <i class="fas fa-route"></i> Directions to College
        </a>
        <a href="/cafeteria" class="btn btn-success">
            <i class="fas fa-utensils"></i> Cafeteria
        </a>
        <a href="/events" class="btn btn-info">
            <i class="fas fa-calendar"></i> Events
        </a>
        <a href="/lostfound" class="btn btn-warning">
            <i class="fas fa-search"></i> Lost & Found
        </a>
    </div>
</div>

<style>
.building-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 4px 8px rgba(0,0,0,0.2);
}
</style>
