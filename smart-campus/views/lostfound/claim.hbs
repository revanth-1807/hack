<div class="card">
    <h1>Claim Item: {{item.itemName}}</h1>

    <div style="display: flex; gap: 2rem; margin-bottom: 2rem;">
        {{#if item.image}}
        <img src="/uploads/{{item.image}}" alt="{{item.itemName}}" style="width: 150px; height: 150px; object-fit: cover; border-radius: 8px;">
        {{else}}
        <div style="width: 150px; height: 150px; background: #f0f0f0; border-radius: 8px; display: flex; align-items: center; justify-content: center;">
            <i class="fas fa-question" style="font-size: 2rem; color: #999;"></i>
        </div>
        {{/if}}
        
        <div style="flex: 1;">
            <h3>Item Details</h3>
            <p><strong>Description:</strong> {{item.description}}</p>
            <p><strong>Found Date:</strong> {{formatDate item.foundDate}}</p>
            <p><strong>Location:</strong> {{item.foundLocation}}</p>
            <p><strong>Category:</strong> {{item.category}}</p>
        </div>
    </div>

    <form action="/lostfound/claim/{{item._id}}" method="POST">
        <div class="card" style="background: #f8f9fa; margin-bottom: 1rem;">
            <h3>Claim Information</h3>
            
            <div class="form-group">
                <label class="form-label">Your Name</label>
                <input type="text" name="claimerName" class="form-control" value="{{user.name}}" required>
            </div>

            <div class="form-group">
                <label class="form-label">Your Email</label>
                <input type="email" name="claimerEmail" class="form-control" value="{{user.email}}" required>
            </div>

            <div class="form-group">
                <label class="form-label">Your Phone Number</label>
                <input type="tel" name="claimerPhone" class="form-control" value="{{user.phone}}" required>
            </div>

            <div class="form-group">
                <label class="form-label">Proof of Ownership (Describe how you can prove this is your item)</label>
                <textarea name="proofOfOwnership" class="form-control" rows="3" required placeholder="e.g., Serial number, unique features, when and where you lost it"></textarea>
            </div>

            <div class="form-group">
                <label class="form-label">Additional Information</label>
                <textarea name="additionalInfo" class="form-control" rows="2" placeholder="Any other relevant information"></textarea>
            </div>
        </div>

        <div style="display: flex; gap: 1rem; margin-top: 2rem;">
            <button type="submit" class="btn btn-primary">Submit Claim</button>
            <a href="/lostfound/{{item._id}}" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
