        <div class="form-group">
            <label class="form-label">Table Number</label>
            <input type="number" name="tableNumber" class="form-control" value="{{table.tableNumber}}" min="1" required>
        </div>

        <div class="form-group">
            <label class="form-label">Table Name/Identifier</label>
            <input type="text" name="name" class="form-control" value="{{table.name}}" placeholder="e.g., Window Table, Corner Booth">
        </div>

        <div class="row">
            <div class="form-group">
                <label class="form-label">Capacity (Seats)</label>
                <input type="number" name="capacity" class="form-control" value="{{table.capacity}}" min="1" required>
            </div>

