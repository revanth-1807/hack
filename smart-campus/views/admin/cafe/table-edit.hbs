            </select>
        </div>

        <div class="form-group">
            <label class="form-label">Features</label>
            <div style="display: flex; flex-wrap: wrap; gap: 1rem;">
                <label>
                    <input type="checkbox" name="features" value="power_outlet" {{#if (includes table.features 'power_outlet')}}checked{{/if}}> Power Outlet
                </label>
                <label>
                    <input type="checkbox" name="features" value="window_view" {{#if (includes table.features 'window_view')}}checked{{/if}}> Window View
                </label>
                <label>
                    <input type="checkbox" name="features" value="wifi_strong" {{#if (includes table.features 'wifi_strong')}}checked{{/if}}> Strong WiFi
                </label>
                <label>
                    <input type="checkbox" name="features" value="wheelchair" {{#if (includes table.features 'wheelchair')}}checked{{/if}}> Wheelchair Accessible
                </label>
                <label>
                    <input type="checkbox" name="features" value="charging" {{#if (includes table.features 'charging')}}checked{{/if}}> Charging Station
                </label>
            </div>
        </div>

        <!-- Current Status Information -->
        <div class="card" style="background: #f8f9fa; margin-bottom: 1rem;">
            <h3>Current Status Information</h3>
            <div style="color: #666;">
                <div>Table Number: <strong>{{table.tableNumber}}</strong></div>
                <div>Current Status: <span class="badge badge-{{#if (eq table.status 'available')}}success{{else if (eq table.status 'occupied')}}danger{{else if (eq table.status 'reserved')}}warning{{else}}secondary{{/if}}">{{table.status}}</span></div>
                {{#if (eq table.status 'occupied')}}
                <div>Occupied Since: {{formatDate table.occupiedSince 'MMM DD, YYYY HH:mm'}}</div>
                {{/if}}
                {{#if (eq table.status 'reserved')}}
                <div>Reserved For: {{table.reservedFor}}</div>
                <div>Reserved Time: {{formatDate table.reservedTime 'MMM DD, YYYY HH:mm'}}</div>
                {{/if}}
            </div>
        </div>

        <div style="display: flex; gap: 1rem; margin-top: 2rem;">
            <button type="submit" class="btn btn-primary">Update Table</button>
            <a href="/admin/cafe/tables" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
