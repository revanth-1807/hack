                <option value="available" {{#if (eq table.status 'available')}}selected{{/if}}>Available</option>
                <option value="occupied" {{#if (eq table.status 'occupied')}}selected{{/if}}>Occupied</option>
                <option value="reserved" {{#if (eq table.status 'reserved')}}selected{{/if}}>Reserved</option>
                <option value="cleaning" {{#if (eq table.status 'cleaning')}}selected{{/if}}>Cleaning</option>
