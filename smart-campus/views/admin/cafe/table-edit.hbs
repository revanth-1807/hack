                    <option value="booth" {{#if (eq table.tableType 'booth')}}selected{{/if}}>Booth</option>
                    <option value="bar" {{#if (eq table.tableType 'bar')}}selected{{/if}}>Bar Table</option>
                    <option value="outdoor" {{#if (eq table.tableType 'outdoor')}}selected{{/if}}>Outdoor</option>
                    <option value="private" {{#if (eq table.tableType 'private')}}selected{{/if}}>Private Room</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <label class="form-label">Location</label>
            <input type="text" name="location" class="form-control" value="{{table.location}}" placeholder="e.g., Main Hall, Near Window, Patio" required>
        </div>

        <div class="form-group">
            <label class="form-label">Description</label>
            <textarea name="description" class="form-control" rows="2" placeholder="Additional details about the table...">{{table.description}}</textarea>
        </div>

        <div class="form-group">
            <label class="form-label">Status</label>
            <select name="status" class极速赛车开奖结果历史记录
