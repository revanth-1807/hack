<script>
// Simple modal functionality
document.addEventListener('click', function(e) {
    if (e.target.hasAttribute('data-toggle') && e.target.getAttribute('data-toggle') === 'modal') {
        const modalId = e.target.getAttribute('data-target');
        document.getElementById(modalId.replace('#', '')).style.display = 'block';
    }
    
    if (e.target.classList.contains('modal') || e.target.classList.contains('btn-secondary')) {
        const modals = document.querySelectorAll('.modal');
        modals.forEach(modal => modal.style.display = 'none');
    }
});
</script>

